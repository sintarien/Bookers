<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title,class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body,class: "book_body" %>
    <br>
    <%= f.submit 'Update Book' %>
    <br>


    <%=link_to "Back",  "/posts",class: "back" %>


    <%= link_to "show", post_path(@post.id),class: "show_#{@post.id}" %>

<% end %>
